#include <stdio.h>
#include <math.h>

int Algo1_SumGeoSeries(int a, int r, int n) {
    if (r == 1)
        return a * n;
    return (int)((a * (pow(r, n) - 1)) / (r - 1));
}

int main() {
    int a, r, n;
    printf("the first term of the GP=");
    scanf("%d", &a);
    printf("the common ratio=");
    scanf("%d", &r);
    printf("the number of terms=");
    scanf("%d", &n);
    printf("%d\n", Algo1_SumGeoSeries(a, r, n));
    return 0;
}
