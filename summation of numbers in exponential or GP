#include <stdio.h>
int pow(int x, int i) {
    if (i == 0) {
        return 1;
    }
    int pow = 1;
    for (int j = 1; j <= i; j++) {
        pow *= x;
    }
    return pow;
}

int* cal(int* sum, int x, int r) {
    for (int i = 0; i <= r; i++) {
        printf("*sum=%d pow(%d,%d)=%d\n", *sum, x, i, pow(x, i));
        *sum += pow(x, i);
    }
    return sum;
}

int main() {
    int x, r;
    printf("Enter the number to find its power=");
    scanf("%d", &x);
    printf("Enter till how many time the power should be calculated=");
    scanf("%d", &r);
    int sum = 0;
    cal(&sum, x, r);
    printf("The sum is=%d", sum);
    return 0;
}
